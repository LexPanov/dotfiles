#!/bin/bash

space_main=1
space_coding=2
space_browsing=3
space_messaging=4

center='32:32:4:4:24:24'

# Reset all windows position
# 1. Move everything to first space
# 2. Float all windows
# 3. Center grid
# 4. Focus space 2
yabai -m space --focus 1
yabai -m query --windows | jq -r '.[] | [.id, .app, .floating] | @tsv' |
  while IFS=$'\t' read -r id app floating; do
    yabai -m window "$id" --space 1
    [[ "$floating" -eq "0" ]] && yabai -m window "$id" --toggle float --grid $center
    yabai -m window "$id" --grid $center
  done
yabai -m space --focus 2

while [[ $(yabai -m query --spaces | jq length) < 4 ]]; do
  yabai -m space --create
done

# Note: Rules is manage=on is buggy since it captures every AXWindow
# Please unfloat them manuallu
yabai -m rule --add label="VSCode" app="^Code$" space="$space_coding"
yabai -m rule --add label="iTerm2" app="^iTerm2$" space="$space_coding"

yabai -m rule --add label="Brave Browser" app="^Brave Browser$" space="$space_browsing"
yabai -m rule --add label="Google Chrome" app="^Google Chrome$" space="$space_browsing"

yabai -m rule --add label="Franz" app="^Franz$" space="$space_messaging"
yabai -m rule --add label="Slack" app="^Slack$" space="$space_messaging"
yabai -m rule --add label="Telegram" app="^Telegram$" space="$space_messaging"

yabai -m rule --add label="1Password 7" app="^1Password 7$" manage=off grid="$center"
yabai -m rule --add label="Browserosaurus" app="^Browserosaurus$" manage=off grid="$center"
yabai -m rule --add label="Activity Monitor" app="^Activity Monitor$" manage=off grid="$center"
yabai -m rule --add label="Alfred Preferences" app="^Alfred Preferences$" manage=off grid="$center"
yabai -m rule --add label="App Store" app="^App Store$" manage=off grid="$center"
yabai -m rule --add label="Boom 3D" app="^Boom 3D$" manage=off grid="$center"
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off grid="$center"
yabai -m rule --add label="Dash" app="Dash" manage=off grid="$center"
yabai -m rule --add label="Dictionary" app="^Dictionary$" manage=off grid="$center"
yabai -m rule --add label="Fantastical" app="Fantastical" manage=off grid="$center"
yabai -m rule --add label="Finder Main" app="^Finder$" manage=off grid="$center"
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off grid="$center"
yabai -m rule --add label="Firefox" app="Firefox" manage=off grid="$center"
yabai -m rule --add label="Preview" app="Preview" manage=off grid="$center"
yabai -m rule --add label="Safari" app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off grid="$center"
yabai -m rule --add label="System Preferences" app="^System Preferences$" manage=off grid="$center"
yabai -m rule --add label="The Unarchiver" app="^The Unarchiver$" manage=off grid="$center"
yabai -m rule --add label="Time Out" app="Time Out" manage=off grid="$center"
yabai -m rule --add label="Transmission" app="^Transmission$" manage=off grid="$center"
yabai -m rule --add label="VirtualBox" app="^VirtualBox$" manage=off grid="$center"

# Unfloat all windows except on first space
yabai -m query --windows | jq -r '.[] | [.id, .space, .floating] | @tsv' |
  while IFS=$'\t' read -r id space floating; do
    [[ "$space" != "1" ]] && [[ "$floating" -eq "1" ]] && yabai -m window "$id" --toggle float
  done

terminal-notifier -title Yabai -message "Rules loaded"
