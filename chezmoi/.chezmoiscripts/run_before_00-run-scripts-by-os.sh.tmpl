#!/bin/bash

SCRIPTS_DIR={{ .chezmoi.sourceDir }}/../scripts

{{- if and (eq .chezmoi.os "linux") (eq .chezmoi.osRelease.id "ubuntu") }}
  OS=linux-ubuntu
{{- else if eq .chezmoi.os "darwin" }}
  OS=darwin
{{- else }}
  echo "Not supported"
  exit 0
{{- end }}

for script in $SCRIPTS_DIR/$OS/*.*sh
do
  $script
done
